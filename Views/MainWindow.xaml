<Window x:Class="BabaIsYouApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BabaIsYouApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="1100" Width="1100">
    <Grid x:Name="gridMain2" ShowGridLines="True">
        <UniformGrid x:Name="gridMain" Background="#000" Margin="0"
                     HorizontalAlignment="Center" VerticalAlignment="Center"
                     Focusable="True" Loaded="FocusGrid">

        </UniformGrid>
        <Label x:Name="lbGUI" Width="380" Height="78" Foreground="Green" Background="White"
               Content="Double Click to Switch Display Mode" FontSize="20" HorizontalContentAlignment="Center"
                VerticalAlignment="Bottom" HorizontalAlignment="Right"></Label>
    </Grid>
</Window>
